// C++ program to show unary operator overloading
#include <iostream>
using namespace std;

class Distance {
public:
    int feet, inch;

    // Constructor to initialize the object's value
    Distance(int f, int i) {
        this->feet = f;
        this->inch = i;
    }

    // Overloading (-) operator to perform decrement operation of Distance object
    void operator-() {
         feet=feet+10;
        inch=inch+20;
        cout << "Feet & Inches is: " << feet << "'" << inch << endl;
    }
};

// Driver Code
int main() {
    cout<<"Vishwajeet Uttam Kamble"<<endl;
    cout<<"Rollno: 150"<<endl;
    cout<<"Div: B"<<endl;
    Distance d1(10,12);

    // Using (-) unary operator by single operand
    -d1;
    return 0;
}

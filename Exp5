#include<iostream>
using namespace std;
int area(int);
int area(int,int);
float area(float);
float area(float,float);
int main()
{
     cout<<"Vishwajeet Uttam Kamble"<<endl;
    cout<<"Rollno: 150"<<endl;
    cout<<"Div: B"<<endl;

    int s,l,b;
    float r,bs,ht;
    cout<<"Enter side of square:";
    cin>>s;
    cout<<"Enter length and breadth of rectangle:";
    cin>>b;
    cout<<"Enter radius of circle:";
    cin>>r;
    cout<<"Enter a base and height of triangle:";
    cin>>bs>>ht;
    cout<<"Area of square is:"<<area(s);
    cout<<"\n Area od rectangle is:"<<area(l,b);
    cout<<"\n Area of circle is:"<<area(r);
    cout<<"\n Area of triangle is:"<<area(bs,ht);

}
int area(int s)
{
    return(s*s);
}
int area(int l,int b)
{
    return(l*b);
}
float area(float r)
{
    return(3.14*r*r);
}
float area(float bs,float ht)
{
    return ((bs*ht)/2);
}
